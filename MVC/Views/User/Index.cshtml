@model MVC.Models.UserInfoModel

@{
    ViewData["Title"] = "Twoje Konto";
}

<section class="section-padding">
    <div class="container bg-light">
        <div class="p-5 row border rounded">
            <p>Panel użytkownika</p>
            <header class="pb-5">
                <div class="row">
                    <h1 class="col-10">Witaj, @Html.DisplayFor(model => model.FirstName) @Html.HiddenFor(model => model.Id)</h1>
                    <a asp-controller="Access" asp-action="SignOut" class="btn btn-dark ml-auto col-2 p-3">Wyloguj się</a>
                </div>
                <p>@Html.DisplayFor(model => model.Email)</p>
            </header><br>
            <table class ="col-12">
                <tbody>
                    <tr>
                        <td class="p-3">
                            <a class="btn btn-dark col-12 p-4" asp-controller="Order" asp-action="Index">Zamów usługi</a>
                        </td>
                        <td class="p-3">
                            <a class="btn btn-dark col-12 p-4" asp-controller="Order" asp-action="MyOrders">Historia zleceń</a>
                        </td>
                        <td class="p-3">
                            <a class="btn btn-dark col-12 p-4" asp-controller="User" asp-action="Edit">Edytuj dane</a>
                        </td>
                    </tr>
                    <tr>
                        <td class="p-3">
                            <a class="btn btn-dark col-12 p-4" asp-controller="PriceList" asp-action="UserPriceList">Zobacz swoją ofertę</a>
                        </td>
                        <td class="p-3">
                            <a class="btn btn-dark col-12 p-4" asp-controller="PriceList" asp-action="Index">Zobacz ofertę podstawową</a>
                        </td>
                        <td class="p-3">
                            <a class="btn btn-dark col-12 p-4" asp-controller="User" asp-action="PasswordChange">Zmień hasło</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</section>

@if(Model.Employee != null)
{
    <section class="section-padding">
        <div class="container bg-light">
            <div class="p-5 row border rounded">
                <p>Panel pracownika #@Html.DisplayFor(model => model.Employee.Id)</p>
                <table class="col-12">
                    <tbody>
                        <tr>
                            <td class="p-3">
                                <a class="btn btn-dark col-12 p-4">Usługi do potwierdzenia</a>
                            </td>
                            <td class="p-3">
                                <a class="btn btn-dark col-12 p-4">Historia zleceń</a>
                            </td>
                            <td class="p-3">
                                <a class="btn btn-dark col-12 p-4">Edytuj dane</a>
                            </td>
                        </tr>
                        <tr>
                            <td class="p-3">
                                <a class="btn btn-dark col-12 p-4">Usługi do wykonania</a>
                            </td>
                            <td class="p-3">
                                <a class="btn btn-dark col-12 p-4">sdf</a>
                            </td>
                            <td class="p-3">
                                <a class="btn btn-dark col-12 p-4">Zmień hasło</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    if(Model.Employee.IsAdmin == true)
    {
        <section class="section-padding">
            <div class="container bg-light">
                <div class="p-5 row border rounded">
                    <p>Panel administatora</p>
                    <table class="col-12">
                        <tbody>
                            <tr>
                                <td class="p-3">
                                    <a class="btn btn-dark col-12 p-4">Pracownicy</a>
                                </td>
                                <td class="p-3">
                                    <a class="btn btn-dark col-12 p-4">Historia zleceń</a>
                                </td>
                                <td class="p-3">
                                    <a class="btn btn-dark col-12 p-4">Edytuj dane</a>
                                </td>
                            </tr>
                            <tr>
                                <td class="p-3">
                                    <a class="btn btn-dark col-12 p-4">Zobacz swoją ofertę</a>
                                </td>
                                <td class="p-3">
                                    <a class="btn btn-dark col-12 p-4">sdf</a>
                                </td>
                                <td class="p-3">
                                    <a class="btn btn-dark col-12 p-4">Zmień hasło</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    }
}


