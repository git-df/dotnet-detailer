@model IEnumerable<MVC.Models.PromocodeInListModel>

@{
    ViewData["Title"] = "Kody promocyjne";
}
@if (Model.Count() > 0)
{
    <section class="section-padding">
        <div class="container mt-5 mb-5 border rounded bg-light p-3">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-header text-center pb-5">
                        <h2>Kody promocyjne</h2><br />
                        <a class="btn btn-dark" asp-controller="Promocode" asp-action="Add">Dodaj</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="col-5">
                                <p>Produkt</p>
                            </th>
                            <th class="col-3">
                                <p>Cena promocyjna (zł)</p>
                            </th>
                            <th class="col-3">
                                <p>Kod</p>
                            </th>
                            <th class="col-1">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(p => item.Product.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(p => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(p => item.Code)
                                </td>
                                <td>
                                    <a class="btn btn-dark" asp-controller="Promocode" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>

}