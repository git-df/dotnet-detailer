<!DOCTYPE html>
<html lang="pl">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>C&C - @ViewData["Title"]</title>
	<!-- CSS -->
	<link href="~/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
	<!-- Nawigacja -->
	<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
		<div class="container">
			<a class="navbar-brand text-warning" asp-area="" asp-controller="Home" asp-action="Index">Clean <span class="text-dark">&</span> Care</a>
			<button aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-bs-target="#navbarContent" data-bs-toggle="collapse" type="button"><span class="navbar-toggler-icon"></span></button>
			<div class="collapse navbar-collapse" id="navbarContent">
				<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="about"><b>O Nas</b></a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="services">Usługi</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="photos">Galeria</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="contact">Kontakt</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-area="" asp-controller="PriceList" asp-action="Index"><b>Cennik</b></a>
					</li>
					<li class="nav-item">
						<a class="nav-link text-warning" asp-area="" asp-controller="Access" asp-action="SignIn"><b>Twoje Konto</b></a>
					</li>
				</ul>
			</div>
		</div>
	</nav>

	@RenderBody()

	<!-- Stopka -->
	<footer class="bg-dark p-2 text-center">
		<div class="container">
			<p class="text-white">Dawid Florian - 165075 - 2022</p>
		</div>
	</footer>
	<script src="~/js/jquery-3.6.3.min.js"></script>
	<script src="~/js/bootstrap.bundle.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
