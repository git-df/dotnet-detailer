@model MVC.Models.OfferUserAddModel

@{
    ViewData["Title"] = "Dodawanie oferty";
}
<section class="section-padding">
    <div class="container mt-5 mb-5 border rounded bg-light p-3">
        <div class="row">
            <div class="col-md-12">
                <div class="section-header text-center pb-5">
                    <br><h2>Dodawanie pracownika</h2>
                </div>
            </div>
        </div>
        <div class="text-center">
            @using (Html.BeginForm("AddOffer", "Offeruser"))
            {
                <table class="mx-auto">
                    <tbody>
                        <tr>
                            <td>
                                <p>Id użytkownika </p>
                            </td>
                            <td>
                                @Html.TextBoxFor(o => o.UserId)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p>Id usługi </p>
                            </td>
                            <td>
                                @Html.TextBoxFor(o => o.ProductId)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p>Cena </p>
                            </td>
                            <td>
                                @Html.TextBoxFor(o => o.Price)
                            </td>
                        </tr>
                    </tbody>
                </table>

                <br />
                <input type="submit" value="Dodaj" class="btn btn-dark" />
            }
        </div>
    </div>
</section>

