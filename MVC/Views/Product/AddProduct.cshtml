@model MVC.Models.ProductAddModel

@{
    ViewData["Title"] = "Dodawanie usługi";
}
<section class="section-padding">
    <div class="container col-4 mt-5 mb-5 border rounded bg-light p-3">
        <div class="row">
            <div class="col-md-12">
                <div class="section-header text-center pb-5">
                    <br><h2>Dodawanie usługi</h2>
                </div>
            </div>
        </div>
        <div class="text-center">
            @using (Html.BeginForm("AddProduct", "Product"))
            {
                <table class="mx-auto">
                    <tbody>
                        <tr>
                            <td>
                                <p>Nazwa </p>
                                @Html.TextBoxFor(p => p.Name)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p>Opis </p>
                                @Html.TextAreaFor(p => p.Description)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p>Cena </p>
                                @Html.TextBoxFor(p => p.Price, new { @type = "number" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p>Czas (min)</p>
                                @Html.TextBoxFor(p => p.Duration, new { @type = "number" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p>Id kategori </p>
                                @Html.TextBoxFor(p => p.CategoryId, new { @type = "number" })
                            </td>
                        </tr>
                    </tbody>
                </table>

                <br />
                <input type="submit" value="Dodaj" class="btn btn-dark" />
                <br />
                <br />
            }
        </div>
        @if (ViewData["Message"] != null)
        {
            <div class="text-center">
                <p class="text-danger col-12">@ViewData["Message"]</p>
            </div>
        }
    </div>
</section>