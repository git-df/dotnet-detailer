@model IEnumerable<MVC.Models.CategoryListModel>

@{
    ViewData["Title"] = "Kategorie";
}
<section class="section-padding">
    <div class="container mt-5 mb-5 border rounded bg-light p-3">
        <div class="row">
            <div class="col-md-12">
                <div class="section-header text-center pb-5">
                    <br><h2>Lista kategori</h2>
                    <a class="btn btn-dark" asp-controller="Category" asp-action="AddCategory">Dodaj kategorie</a>
                </div>
            </div>
        </div>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th class="col-4">
                            <p>Id kategori</p>
                        </th>
                        <th class="col-6">
                            <p>Nazwa</p>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(c => category.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(o => category.Name)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
